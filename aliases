# Rails
alias r="rails"

# Laravel
alias art="php artisan"
alias artm="php artisan migrate --seed"
alias artmr="php artisan migrate:refresh --seed"
alias artdbs="php artisan db:seed"
alias artdump="php artisan dump-autoload"

# Symfony
alias symf="symfony"
alias symfs="php app/console server:run"
alias symfstart="php app/console server:run"
alias symfdbcreate="php app/console doctrine:database:create"
alias symfcontroller="php app/console generate:controller --no-interaction --controller="
alias symfentity="php app/console doctrine:generate:entity"
alias symfmodel="php app/console doctrine:generate:entity"
alias symfentities="php app/console doctrine:generate:entities --no-backup"
alias symfdbdrop="php app/console doctrine:database:drop --force"
alias symfdbupdate="php app/console doctrine:schema:update --force"
alias symfixtures="php app/console doctrine:fixtures:load"
alias symffixtures="php app/console doctrine:fixtures:load"
alias symfclearcache="php app/console cache:clear"
alias symfcc="php app/console cache:clear"

# git
alias g="git"
alias gi="git init"
alias gs="git status"
alias gc="git add -A && git commit"
alias gp="git push"
alias gpush="git push"
alias gpull="git pull"

# Shell
alias subl="/Applications/Sublime\ Text.app/Contents/SharedSupport/bin/subl"
alias dotfiles="~/code/dotfiles/bin/setup-dotfiles"
alias cdotfiles="cd ~/code/dotfiles"
alias cddotfiles="cd ~/code/dotfiles"
alias c="pygmentize -g"
alias addalias="subl ~/code/dotfiles/aliases"
alias hosts="subl /etc/hosts"
